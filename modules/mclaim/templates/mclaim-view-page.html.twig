<div class="mclaim-tabs">
  <ul class="tab-links">
    {% for key, label in tabs %}
      <li {% if loop.first %}class="active"{% endif %}>
        <a href="{{ key }}">{{ label }}</a>
      </li>
    {% endfor %}
  </ul>
  
  {% for key, label in tabs %}
    <div id="{{ key }}" class="tab-content {% if loop.first %}active{% endif %}">
      <div id="claim-filter-form">
        {{ form }}
      </div>
      <table class="claims-table">
        <thead>
          <tr>
            {# <th>Claim Number</th> #}
            <th>Patient Name</th>
            <th>Service Type</th>
            <th>Provider Name</th>
            <th>Claims Value</th>
            {# <th>Submission Date</th> #}
            <!-- Add more headers as needed -->
          </tr>
        </thead>
        <tbody>
          {% for item in content %}
            <tr>
              {# <td>{{ item.claims_number }}</td> #}
              <td>{{ item.patient_name }}</td>
              <td>{{ item.service_type }}</td>
              <td>{{ item.provider_name }}</td>
              <td>${{ item.claims_value }}</td>
              {# <td>{{ item.submission_date }}</td> #}
              <!-- Add more fields as needed -->
            </tr>
          {% endfor %}
        </tbody>
      </table>
  {% endfor %}
</div>
